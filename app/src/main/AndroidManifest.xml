<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tempakunoshiro.automaticotakumatching" >

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".HirobaActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ProfileActivity" ></activity>
        <activity android:name=".ProfileListActivity" ></activity>
        <service android:name=".Switcher" ></service>
        <service android:name=".MatchingService" ></service>
        <service android:name=".RandomDataSender" ></service>
    </application>

</manifest>